@using TokatRestoran.Models.Entity
@model List<TBLYorum>
@{
    ViewBag.Title = "AdminKafeBlogYorum";
    Layout = "~/Views/Shared/Admin_Laout.cshtml";
}

<h3>Kafe & Restorant Yorum Listesi</h3>

<div>
    <table class="table table-bordered">
        <tr>
            <th>ID</th>
            <th>Ad Soyad</th>
            <th>Mail</th>
            <th>Mesaj</th>
            <th>Sil</th>
            <th>Güncelle</th>
        </tr>
        @foreach (var x in Model)
        {
            <tr>
                <td>@x.id</td>
                <td>@x.AdSoyad</td>
                <td>@x.Mail</td>
                <td>@x.Mesaj</td>

                <td><a href="~/Admin/AdminKafeBlogYorumSil/@x.id" class="btn btn-danger">Sil</a></td>
                <td><a href="~/Admin/AdminKafeBlogYorumGetir/@x.id" class="btn btn-warning">Güncelle</a></td>
            </tr>
        }
    </table>
</div>

